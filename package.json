{
  "name": "taskagent",
  "version": "1.0.0",
  "description": "Simpel opgave- og tidsstyring med kunder, projekter og opgaver",
  "type": "module",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "build": "npm install --production --no-audit --no-fund",
    "dev": "NODE_ENV=development node --watch server.js",
    "setup-db": "node setup-database.js",
    "restart": "pkill -f \"node server.js\" && npm start",
    "stop": "pkill -f \"node server.js\"",
    "force-restart": "pkill -9 -f node && npm start",
    "dev-restart": "pkill -f \"node server.js\" && npm run dev",
    "clear-cache": "echo 'Cache clearing commands:' && echo '1. Hard refresh: Cmd+Shift+R (Mac) / Ctrl+Shift+R (PC)' && echo '2. Clear all: Cmd+Option+E (Mac) / F12 > Application > Clear Storage' && echo '3. Disable cache: F12 > Network > Disable cache'"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/static": "^6.12.0",
    "dotenv": "^17.2.2",
    "fastify": "^4.23.2",
    "mysql2": "^3.6.0"
  },
  "keywords": [
    "task",
    "time-tracking",
    "project-management"
  ],
  "author": "",
  "license": "MIT"
}
