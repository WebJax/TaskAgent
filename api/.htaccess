# .htaccess for /api directory - Simply.com Compatible
# Handle all API requests through index.php

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect everything to index.php while preserving the path
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [L,QSA]
</IfModule>

# Security - block access to backup files
<FilesMatch "\.(php\.bak|backup)$">
    Require all denied
</FilesMatch>

# Ensure PHP files can be executed
<FilesMatch "\.php$">
    <RequireAll>
        Require all granted
    </RequireAll>
</FilesMatch>